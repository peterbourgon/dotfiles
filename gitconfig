[init]
	defaultBranch = main

[push]
	default = nothing # be explicit!

[alias]
	st = status
	dif = diff
	pul = pull
	branches = branch
	remotes = remote
	switchto = checkout
	unstage = reset HEAD --
	uncommit = reset --soft HEAD^
	outgoing = "!git lol origin/$(git rev-parse --abbrev-ref HEAD).."
	incoming = "!git lol ..origin/$(git rev-parse --abbrev-ref HEAD)"
	plog = log --graph --pretty=format:'%C(auto,red)%h · %C(auto,magenta)%an · %C(auto,red)%cr · %C(auto)%s%C(auto,green)%d'
	lol  = log --graph --decorate --pretty=oneline --abbrev-commit
	lola = log --graph --decorate --pretty=oneline --abbrev-commit --all
	pb = "!git push origin $(git branch --show-current)"

[color]
	ui = auto

[url "ssh://git@github.com/"]
	insteadOf = https://github.com/

# [url "ssh://git@gitlab.com/"]
#	insteadOf = https://gitlab.com/

[url "ssh://git@bitbucket.org/"]
	insteadOf = https://bitbucket.org/

[commit]
	# gpgsign = true
[user]
	email = peter@bourgon.org
	name = Peter Bourgon
[filter "lfs"]
	required = true
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f
	process = git-lfs filter-process
